<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bao_cao_du_an_form" model="ir.ui.view">
            <field name="name">bao_cao_du_an_form</field>
            <field name="model">bao_cao_du_an</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>Báo cáo Dự Án</h2>
                        <group>
                            <group col="2" string="Thông tin chung">
                                <field name="du_an_id"/>
                                <field name="ten_du_an"/>
                                <field name="ma_du_an"/>
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                                <field name="ngay_bao_cao"/>
                                <field name="tieu_de"/>
                                <field name="mo_ta"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    <record id="view_bao_cao_du_an_tree" model="ir.ui.view">
        <field name="name">bao_cao_du_an_tree</field>
        <field name="model">bao_cao_du_an</field>
        <field name="arch" type="xml">
            <tree>
                <field name="du_an_id"/>
                <field name="ten_du_an"/>
                <field name="ma_du_an"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="ngay_bao_cao"/>
                <field name="tieu_de"/>
            </tree>
        </field>
    </record>
    <record id="action_bao_cao_du_an" model="ir.actions.act_window">
        <field name="name">Báo cáo dự án</field>
        <field name="res_model">bao_cao_du_an</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>