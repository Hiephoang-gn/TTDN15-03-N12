                            <field name="ten_phuong_tien"/>        
                            <field name="ngay_mua_xe"/>
                            <field name="dia_chi"/>
                            <field name="nhan_hieu"/>
                            <field name="mau_son"/>
                            <field name="bien_so_dang_ky"/>
                            <field name="dang_ky_lan_dau_ngay"/>
