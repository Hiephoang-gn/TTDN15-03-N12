                            <field name="so_dien_thoai"/>
                            <field name="gia_cho_thue_theo_gio"/>
                            <field name="gia_cho_thue_theo_ngay"/>
                            <field name="gia_ban_xe"/>
                            <field name="hop_dong_mua_ban_xe"/>
                            <field name="tinh_trang_xe"/>
                            <field name="hinh_anh_xe_mot" widget="image"/>
                            <field name="hinh_anh_xe_hai" widget="image"/>
                            <field name="hinh_anh_xe_ba" widget="image"/>
                             <field name="hinh_anh_xe_bon" widget="image"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="phuong_tien_search">
            <field name="model">phuong_tien</field>
            <field name="arch" type="xml">
                <search>
                              <field name="ma_dinh_danh_phuong_tien"/>
                            <field name="ten_chu_xe"/>
